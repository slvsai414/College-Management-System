<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academic Management - College Management System</title>
    <link rel="stylesheet" href="academic-management.css">
</head>
<body>
    <header>
        <h1>College Management System</h1>
        <nav>
            <ul>
                <li><a href="index">Main Menu</a></li>
                <li><a href="dashboard">Dashboard</a></li>
                <li><a href="studentInfo">Student Information</a></li>
                <li><a href="academic-management">Academic Management</a></li>

                <li><a href="library-management.html">Library Management</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="course-management">
            <h2>Course Management</h2>
            <form  action="academic-management" method="get"></form>
            <% if (course_info.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Course ID</th>
                            <th>Course Name</th>
                            <th>Department</th>
                            <th>Duration</th>
                            <th>Credits</th>
                            <!-- Add more headers as necessary -->
                        </tr>
                    </thead>
                    <tbody>
                        <% course_info.forEach(course => { %>
                            <tr>
                                <td><%= course.course_id %></td>
                                <td><%= course.name %></td>
                                <td><%= course.department %></td>
                                <td><%= course.duration %></td>
                                <td><%= course.credits %></td>
                                <!-- Add more columns as necessary -->
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No courses available.</p>
            <% } %>
        </section>


        
        <section id="add-course">
            <% if (email === 'slvsai414@gmail.com') { %>
            <h2>Add New Course</h2>
            <form action="academic" method="post">
                <label for="course_id">Course ID:</label>
                <input type="text" id="course_id" name="course_id" required>
                
                <label for="name">Course Name:</label>
                <input type="text" id="name" name="name" required>
                
                <label for="duration">Duration:</label>
                <input type="text" id="duration" name="duration" required>

                <label for="department">Department:</label>
                <input type="text" id="department" name="department" required>
                
                <label for="credits">Credits:</label>
                <input type="text" id="credits" name="credits" required>
                
                <button type="submit">Add Course</button>
            </form>
            <%} else { %>
                <p>You Dont Have Permisson To Add Course</p>
            <%}%>
        </section>


    </main>
    <footer>
        <p>&copy; 2024 College Management System. All rights reserved.</p>
    </footer>
</body>
</html>
